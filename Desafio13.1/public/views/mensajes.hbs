{{! {{#if messagesDenormalized.length}}
{{#if mensajes.length}}
<div class="table-responsive">
        {{! {{#each messagesDenormalized}}
        {{#each mensajes}}
        <div>
            <strong style="color:blue">{{this.email}}</strong> <a style="color:brown">{{this.fecha}}</a> <a style="color:green">{{this.mensaje}}</a>
        </div>
        {{/each}}
</div>
{{ else }}
<h3 class="alert alert-warning">No hay mensajes</h3>
{{/if}}